
<div class="card" style="max-width: 600px;">
  <div class="card" style="max-width: 600px;">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @target.youtube.last(11) %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <div class="card-body flex">
      <h5 class="card-title"><%= @target.title %></h5>
      <a href="#" class="btn btn-primary">Fight!!</a>
    </div>
    <% @comments.each do |comment|%>
      <div class="message">
        <div class="upper-message">
          <div class="message-user">
            <%= comment.user.nickname%>
          </div>
          <div class="message-date">
            <%= l comment.created_at %>
          </div>
        </div>
        <div class="lower-message">
          <div class="message-content">
            <%= comment.comment%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
