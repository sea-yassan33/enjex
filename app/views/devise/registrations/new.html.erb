<%= render "shared/second-header" %>
<div class="container">
  <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">
    新規登録
  </h2>
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
      <%= form_with model: @user,url: user_registration_path, local: true do |f| %>
        <div class="form-floating mb-3">
          <%= f.label :nickname ,class: "m-1"%>
          <br>
          <%= f.text_field :nickname, autofocus: true, maxlength: "6" ,class: "form-control"%>
        </div>
        <div class="form-floating mb-3">
          <%= f.label :email ,class: "m-1"%>
          <br>
          <%= f.email_field :email ,class: "form-control"%>
        </div>
        <div class="form-floating mb-3">
          <%= f.label :password ,class: "m-1"%>
          <br>
          <%= f.password_field :password ,class: "form-control"%>
        </div>
        <div class="form-floating mb-3">
          <%= f.label :'Password(Confirm)' ,class: "m-1"%>
          <br>
          <%= f.password_field :password_confirmation ,class: "form-control"%>
        </div>
        <div class="mb-3">
        <%= f.submit "Registration",class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/second-footer" %>